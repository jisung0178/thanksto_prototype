<!--로그인페이지-->
<div class="container">


<div class="row" style="margin-top:30px; padding:30px; background-color: #fff">
  <div class="col-md-8 col-md-offset-2" >
    <div class="row text-center">
      <div style="display: block; width: 300px; height: 85px; margin: 0 auto;">
        <%=link_to root_path do %>
          <%=image_tag "login_logo"%>
        <%end%>
      </div>
      <div class="h3" style="color: #888;">로그인</div>
    </div>
<br>
    <div class="col-md-6" style="border-right: 1px solid #eee;">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true , class: "form-control", placeholder: "페이스북 이메일"%>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off" , class: "form-control", placeholder: "비밀번호" %>
        </div>

        <div class="actions">
          <%= f.submit "로그인" , class: "btn btn-danger"%>
        </div>
      <% end %>
    </div>

    <div class="col-md-6">
      <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-primary btn-block" do%>
        <i class="fa fa-facebook" aria-hidden="true"></i> &nbsp; 페이스북으로 로그인
      <%end%>
      <sub>페이스북 계정으로 쉽고 빠르게<br> '땡스투!'의 모든 서비스를 이용할 수 있습니다. </sub>
    </div>


</div>
</div>
</div>